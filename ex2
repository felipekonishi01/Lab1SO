#include <stdio.h>

int main(void) {
  int n1, n2, n3;
  char grade;
  printf("Digite a n1: \n");
  scanf("%d", &n1);

  printf("Digite a n2: \n");
  scanf("%d", &n2);

  printf("Digite a n3: \n");
  scanf("%d", &n3);

  int ME = (n1 + n2 + n3) / 3;

  float ma = (float)(n1 +(n2*2) + (n3*3) + ME)/7;
  
  if (ma >= 9) {
      grade = 'A';
    } else if (ma >= 7.5 && ma < 9) {
      grade = 'B';
    } else if (ma >= 6 && ma < 7.5) {
      grade = 'C';
    } else if (ma >= 4 && ma < 6) {
      grade = 'D';
    } else {
      grade = 'E';
    }
    // Output
    printf("MÃ©dia de Aproveitamento (MA): %.2f\n", ma);
    printf("Conceito: %c\n", grade);
    return 0;
  }
